.blocks
	position absolute
	top 70px
	bottom 10px
	right 10px
	left 10px
	margin 0
	padding 0
		
	.block
		z-index 10
		float left
		width ( 100% / 3 )
		//height calc(100%-70px/3)
		position relative
		padding 0
		margin 0
		border-radius block_radius
		//transition all .2s ease-out
		
		span.xlarge
			display block
			position relative
			line-height 100%
			width 100%
			color rgba( lightText, .6 )			
			font-size 100px
			text-align center
	
	.block.open
		z-index 11
		width 100%
		height 100%
		position absolute
	
	.block .close
		color #fff
		opacity .8
		
	.block-footer
		position absolute
		bottom 5px
		left 5px
		right 5px
		padding 10px 15px
		margin 0
		background rgba( bgColorDark, .3 )
		color lightText
		border-radius bottom block_radius
	
	.block-content
		position absolute
		top 5px
		bottom 5px
		left 5px
		right 5px
		background keyColorA
		padding 15px
		border-radius block_radius
	
	// Block sizes
	.block-s
		width ( 100% / 4 )
		height calc((100%)/3)
		
		span.xlarge
			font-size 70px
		
	.block-m
		width ( 100% / 2 )
		height calc((100%)/3)
	
	.block-mw
		width 100%
		height calc((100%)/3)
		
	.block-l
		width ( 100% / 2 )
		height calc((100%)/3*2)
	
	.block-xl
		width 100%
		height calc((100%)/3*2)
	
	// Block themes
	.block-blue
		.block-content
			background keyColorB
			color #fff
		
	.block-light
		.block-content
			background keyColorA + 60%
		
		.block-footer
			background rgba( bgColor, .3 )
			color darkText
		
		span.xlarge
			color rgba( darkText, .6 )	
	
	
// Desktop & Tablet landscape
@media (min-width _resp_tablet + 1)

	.blocks
		// Block sizes
		.block-s
			width ( 100% / 6 )
			
			span.xlarge
				font-size 70px
			
		.block-m
			width ( 100% / 3 )
		
		.block-mw
			width ( 100% / 3*2 )
			height calc((100%)/3)
			
		.block-l
			width ( 100% / 3 )
		
		.block-xl
			width ( 100% / 3*2 )
			height calc((100%)/3*2)

		// Block Positions
		for _col in (0..5)
			for _row in (0..10)
				.block-posl-{_col + 1}-{_row + 1}
					position absolute
					left ( 100%/6*_col )
					top ( 100%/3*_row)
	
// Tablet protrait
@media (max-width _resp_tablet) and (min-width _resp_mobile + 1)
	.blocks
		bottom 20px
		.block
			height 200px
		
		.block-l
		.block-xl
			height 400px
		
		// Block Positions
		for _col in (0..3)
			for _row in (0..10)
				.block-posm-{_col + 1}-{_row + 1}
					position absolute
					left ( 100%/4*_col )
					top ( 100%/3*_row)

// Mobile view
@media (max-width _resp_mobile)
	.blocks
		position static
		margin 70px 10px 20px
		.block
			height 200px
		
		.block-l
		.block-xl
			height 400px

		// Block sizes
		.block-m
			width 100%
			
		.block-l
		.block-mw
			width 100%
		
		.block-s
			width ( 100% / 2 )
				

		